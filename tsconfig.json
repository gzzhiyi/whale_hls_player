{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    },
    "outDir": "./dist",
    "sourceMap": false,
    "jsx": "react",
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "node",
    "noImplicitAny": false,
    "allowJs": false,
    "strict": true,
    "noUnusedLocals": false,
    "experimentalDecorators": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "removeComments": true,
    "declaration": true,
    "declarationMap": false,
    "declarationDir": "./dist/types",
    "lib": ["esnext", "dom"],
    "types": ["node"]
  },
  "include": ["src"],
  "exclude": [
    "**/*.spec.ts",
    "node_modules",
    "dist",
    "demos"
  ]
}